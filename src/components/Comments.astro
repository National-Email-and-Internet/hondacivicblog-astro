---
interface Props {
  pageId: string;
  pageTitle?: string;
}

const { pageId, pageTitle } = Astro.props;
const CUSDIS_HOST = "https://comments.natinternet.com";
const APP_ID = "b86af06c-2113-42a8-94c4-753339a0bea2";
---

<section class="mt-16">
  <div class="bg-red-50 border-2 border-red-200 rounded-xl shadow-lg p-8">
    <h2 class="text-2xl font-bold text-red-900 mb-2 flex items-center gap-3">
      <svg class="w-7 h-7 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
      </svg>
      Join the Discussion
    </h2>
    <p class="text-red-700 mb-6">Have a question or tip about Honda Civics? Share it below!</p>
    
    <div id="cusdis_thread"
      data-host={CUSDIS_HOST}
      data-app-id={APP_ID}
      data-page-id={pageId}
      data-page-url={Astro.url.href}
      data-page-title={pageTitle || pageId}
    ></div>
  </div>
</section>

<script is:inline>
  window.CUSDIS_LOCALE = {
    powered_by: 'Comments',
    post_comment: 'Post Comment',
    loading: 'Loading...',
    email: 'Email (optional)',
    nickname: 'Name',
    reply: 'Reply',
    mod_badge: 'Admin',
    content: 'Comment',
    comment: 'Comment',
    sending: 'Sending...',
  };
</script>
<script is:inline src="https://comments.natinternet.com/js/cusdis.umd.js" defer></script>
