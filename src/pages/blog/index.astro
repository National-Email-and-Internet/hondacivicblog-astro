---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Posts sorted by date (dates hidden for legacy content)
---

<BaseLayout 
  title="Blog" 
  description="Articles, news, and updates about Honda Civic. DIY guides, reviews, and enthusiast content."
>
  <!-- Hero -->
  <section class="bg-honda-dark text-white py-16">
    <div class="max-w-6xl mx-auto px-4 text-center">
      <h1 class="font-heading font-black text-4xl md:text-5xl mb-4">Blog Archive</h1>
      <p class="text-gray-300 text-lg max-w-2xl mx-auto">
        {sortedPosts.length} articles about Honda Civic, from DIY guides to industry news.
      </p>
    </div>
  </section>

  <!-- All Posts -->
  <section class="py-16">
    <div class="max-w-4xl mx-auto px-4">
      <div class="space-y-4">
        {sortedPosts.map(post => (
          <a 
            href={`/blog/${post.slug}/`}
            class="block group bg-white dark:bg-honda-gray rounded-xl p-6 shadow-sm hover:shadow-lg transition border border-gray-100 dark:border-gray-700"
          >
            <div class="flex flex-col sm:flex-row sm:items-center gap-4">
              <div class="flex-1">
                <h3 class="font-semibold text-lg group-hover:text-primary transition line-clamp-1">
                  {post.data.title}
                </h3>
                {post.data.description && (
                  <p class="text-gray-500 dark:text-gray-400 text-sm mt-1 line-clamp-2">
                    {post.data.description}
                  </p>
                )}
              </div>
              {post.data.categories && post.data.categories.length > 0 && (
                <div class="flex gap-2 shrink-0">
                  <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded">
                    {post.data.categories[0]}
                  </span>
                </div>
              )}
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
