---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const generations = await getCollection('generations');
  return generations.map(gen => ({
    params: { slug: gen.slug },
    props: { gen },
  }));
}

const { gen } = Astro.props;
const { Content } = await gen.render();

// Get adjacent generations for navigation
const generations = await getCollection('generations');
const sortedGenerations = generations.sort((a, b) => a.data.generation - b.data.generation);
const currentIndex = sortedGenerations.findIndex(g => g.slug === gen.slug);
const prevGen = currentIndex > 0 ? sortedGenerations[currentIndex - 1] : null;
const nextGen = currentIndex < sortedGenerations.length - 1 ? sortedGenerations[currentIndex + 1] : null;
---

<BaseLayout 
  title={gen.data.title}
  description={gen.data.description}
  image={gen.data.image}
>
  <!-- Hero -->
  <section class="relative bg-honda-dark text-white py-20 overflow-hidden">
    {gen.data.image && (
      <div class="absolute inset-0 z-0">
        <img 
          src={gen.data.image} 
          alt={gen.data.title}
          class="w-full h-full object-cover opacity-40"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-honda-dark via-honda-dark/70 to-honda-dark/50"></div>
      </div>
    )}
    
    <div class="max-w-4xl mx-auto px-4 relative z-10">
      <nav class="text-sm text-gray-400 mb-4">
        <a href="/" class="hover:text-white transition">Home</a>
        <span class="mx-2">/</span>
        <a href="/generations/" class="hover:text-white transition">Generations</a>
        <span class="mx-2">/</span>
        <span class="text-white">{gen.data.generation}th Gen</span>
      </nav>
      
      <span class="inline-block bg-primary text-white px-4 py-1 rounded-full text-sm font-medium mb-4">
        {gen.data.years}
      </span>
      
      <h1 class="font-heading font-black text-4xl md:text-5xl mb-4">
        {gen.data.title}
      </h1>
      
      {gen.data.description && (
        <p class="text-gray-300 text-lg max-w-2xl">
          {gen.data.description}
        </p>
      )}
    </div>
  </section>

  <!-- Highlights -->
  {gen.data.highlights && gen.data.highlights.length > 0 && (
    <section class="bg-gray-100 dark:bg-honda-gray py-8">
      <div class="max-w-4xl mx-auto px-4">
        <div class="flex flex-wrap gap-4 justify-center">
          {gen.data.highlights.map(highlight => (
            <div class="bg-white dark:bg-honda-dark px-4 py-2 rounded-lg shadow-sm">
              <span class="text-primary mr-2">✓</span>
              <span class="text-sm">{highlight}</span>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Content -->
  <article class="py-16">
    <div class="max-w-4xl mx-auto px-4">
      <div class="prose prose-lg dark:prose-invert max-w-none prose-headings:font-heading prose-headings:font-bold prose-a:text-primary prose-img:rounded-xl">
        <Content />
      </div>
    </div>
  </article>

  <!-- Engines -->
  {gen.data.engines && gen.data.engines.length > 0 && (
    <section class="py-16 bg-gray-100 dark:bg-honda-gray">
      <div class="max-w-4xl mx-auto px-4">
        <h2 class="font-heading font-bold text-2xl mb-6">Available Engines</h2>
        <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-4">
          {gen.data.engines.map(engine => (
            <div class="bg-white dark:bg-honda-dark p-4 rounded-xl">
              <span class="font-mono font-medium">{engine}</span>
            </div>
          ))}
        </div>
        <p class="text-center mt-6">
          <a href="/engines/" class="text-primary hover:underline">View all engine specifications →</a>
        </p>
      </div>
    </section>
  )}

  <!-- Navigation -->
  <section class="py-8 border-t border-gray-200 dark:border-gray-700">
    <div class="max-w-4xl mx-auto px-4">
      <div class="flex justify-between items-center">
        {prevGen ? (
          <a 
            href={`/generations/${prevGen.slug}/`}
            class="flex items-center gap-2 text-gray-600 dark:text-gray-400 hover:text-primary transition"
          >
            <span>←</span>
            <span class="hidden sm:inline">{prevGen.data.title}</span>
            <span class="sm:hidden">{prevGen.data.generation}th Gen</span>
          </a>
        ) : <div />}
        
        <a 
          href="/generations/" 
          class="text-primary hover:underline"
        >
          All Generations
        </a>
        
        {nextGen ? (
          <a 
            href={`/generations/${nextGen.slug}/`}
            class="flex items-center gap-2 text-gray-600 dark:text-gray-400 hover:text-primary transition"
          >
            <span class="hidden sm:inline">{nextGen.data.title}</span>
            <span class="sm:hidden">{nextGen.data.generation}th Gen</span>
            <span>→</span>
          </a>
        ) : <div />}
      </div>
    </div>
  </section>
</BaseLayout>
